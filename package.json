{
  "name": "fogo-validator-explorer",
  "version": "1.0.0",
  "description": "Fogo Blockchain Validator Explorer",
  "main": "electron.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "dist": "electron-builder --win"
  },
  "author": "Nuno Rebelo",
  "dependencies": {
    "bs58": "^6.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.fogeeshub.validator-explorer",
    "productName": "Fogo Validator Explorer",
    "files": [
      "electron.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    }
  }
}
